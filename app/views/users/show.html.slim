.container
  div.jumbotron.show_user
    div.text-center
      h1 Mi perfil
      div class="row"
        div class="span4"
        div class="span4"
          = image_tag(@user.avatar, class:"img-responsive img-circle center-block", width: "304", height:"236")
        div class="span4"
      p
        | Nombre de Usuario:
        span = @user.username

      p
        | Nombre:
        span = @user.first_name

      p
        | Apellidos:
        span = @user.last_name

      p
        | Correo Electr√≥nico:
        span = @user.email

      p = link_to "Editar Perfil", edit_user_registration_path

  h2.text-center Mis Favoritas

  #photos
    - @favorite_movies.each do |favorite|
      .wrapper
        .photo
          = link_to(image_tag(favorite.avatar, width: 476, height: 268), favorite)
          p
            = favorite.title
            | &nbsp&nbsp - &nbsp&nbsp
            = link_to unfavorite_movie_path(favorite), method: :put do
              span Eliminar de favoritos &nbsp
              i.fa.fa-trash-o aria-hidden="true"
