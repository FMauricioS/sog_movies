<h2 class="text-center">Editando Mi Perfil</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal', method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :username %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :genre, collection: ["Hombre", "Mujer", "Otro"], prompt: "Seleciona tu genero" %>
  <%= f.input :email, autofocus: true %>
  <%= f.input :password, autocomplete: "off" %>
  <%= f.input :password_confirmation, autocomplete: "off" %>
  <%= f.input :current_password, autocomplete: "off" %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Back", :back %>
