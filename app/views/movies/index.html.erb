<div class="container">
<% @movies.each do |movie| %>
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag movie.avatar %>
        <div class="caption">
          <h3 class="text-center"><%= movie.title %></h3>
          <span>Duración: <%= movie.movie_length %></span>
          <span> <%= link_to "Ver Más", movie_path(movie.id), class:"btn btn-primary" %> </span>
        </div>
      </div>
    </div>
  </div>
  <div> 
<% end %>
</div>
