<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "SOG MOVIES", root_path, class: "navbar-brand" %>
    </div>
    
    <%= form_tag movies_path, method: :get, class: "form-horizontal navbar-form navbar-left" do %> 
      <div class="form-group">
        <%= select_tag "search", options_for_select([["Trending Top", "trending"], ["Título", "title"],["Año", "release_year"], ["Popularidad", "popularity"]], params[:search]), class: "form-control" %>  
        <%= submit_tag "Ordenar", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% if current_user.is_admin? %>
            <li> <%= link_to "Administrador", admin_root_path %></li>
          <% end %>
          <li> <%= link_to current_user.username, user_path(current_user.id) %></li>
          <li><%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li> <%= link_to "Iniciar Sesión", new_user_session_path %>  </li>
          <li> <%= link_to "Registrarse", new_user_registration_path %>  </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
